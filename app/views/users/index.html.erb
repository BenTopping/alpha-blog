<h1 align="center">All users:</h1>
<div align="center">
  <div class="pagination">
    <%= will_paginate %>
  </div>
<% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="card col-md-4 offset-md-4">
        <li><%= link_to gravatar_for(user), user_path(user)%></li>
        <li><small><%=pluralize(user.articles.count, "article") if user.articles%></small></li>
        <li class="article-title">
          <%=link_to user.username, user_path(user)%>
        </li>
        <% if logged_in? && current_user.admin? %>
        <li>
          <%= link_to "Delete user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user and all their articles?"},class: "btn btn-xs btn-danger" %>
        </li>
        <% end %>
    </div>
  </ul>
<% end %>
</div>
