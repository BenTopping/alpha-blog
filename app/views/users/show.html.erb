<h1 align="Center">Welcome to <%=@user.username%>'s page</h1>
<div class="row">
  <div class="col-md-4 offset-md-4 center">
    <%= gravatar_for @user, size:150 %>
  </div>
</div>
<h4 align="center"><%= @user.username %>'s articles</h4>
<div class="article">
  <%= line_chart @user.articles.group_by_day(:created_at).count, xtitle: "Time", ytitle: "Articles created"%>
</div>
<div align="center" class="pagination">
  <%= will_paginate @user_articles %>
</div>
<%= render 'articles/article', obj: @user_articles %>
